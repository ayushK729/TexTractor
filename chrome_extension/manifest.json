{
  "manifest_version": 3,
  "name": "OCR Extractor",
  "description": "Extract text from images using easyocr",
  "version": "7.0",
  "permissions": [
    "activeTab",
    "storage"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_icon": {
      "16": "images/icon16.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    }
  },
  "host_permissions": [
    "http://localhost:5000/*"
  ]
}
